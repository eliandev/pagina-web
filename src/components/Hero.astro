---
import heroImg from "@assets/hero.png";
---

<section class="hero">
  <img class="img" src={heroImg.src} alt="Imagen sobre calzado formal" />
  <div class="info">
    <h1 class="heading">Encuentra tu estilo perfecto</h1>
    <p class="legend">
      Descubre el calzado que combina elegancia, comodidad y tendencia. ¡Lleva
      tu look al siguiente nivel!
    </p>
    <button class="btn">Explorar catálogo</button>
  </div>
</section>

<style>
  .hero {
    width: 100%;
    max-height: 500px;
    position: relative;
    overflow: hidden;
  }

  .hero .img {
    width: 100%;
    height: 500px;
    object-fit: cover;
  }

  .hero::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.2);
    z-index: 1;
  }

  .info {
    width: 90%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    text-align: center;
    line-height: 3.8rem;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 2;
  }

  .info .heading {
    margin: 0;
    font-size: 60px;
    font-weight: 400;
    font-family: "Poppins", serif;
    color: #fff;
  }

  .info .legend {
    color: #fff;
    font-size: 1.3rem;
    line-height: 2rem;
    max-width: 55ch;
    margin: auto;
  }

  .info .btn {
    width: fit-content;
    padding: 10px 20px;
    border: none;
    cursor: pointer;
    font-size: 1rem;
    font-weight: 600;
    margin-top: 2rem;
    margin-left: auto;
    margin-right: auto;
  }

  @media (max-width: 600px) {
    .hero {
      max-height: 600px;
    }

    .hero .img {
      height: 600px;
    }

    .info {
      width: 90%;
    }

    .info .heading {
      font-size: 3rem;
      line-height: 45px;
      margin-bottom: 3rem;
    }

    .info .legend {
      margin-top: 1rem;
      margin-bottom: 2.5rem;
      font-size: 1.5rem;
    }

    .info .btn {
      margin-top: 2rem;
    }
  }
</style>
