<form id="contactForm" novalidate>
  <div class="form-group">
    <label for="name">Nombre</label>
    <input type="text" id="name" name="name" required />
    <small class="error-message" id="nameError"
      >Este campo es obligatorio.</small
    >
  </div>

  <div class="form-group">
    <label for="email">Email</label>
    <input type="email" id="email" name="email" required />
    <small class="error-message" id="emailError"
      >Por favor, ingresa un email válido.</small
    >
  </div>

  <div class="form-group">
    <label for="phone">Teléfono</label>
    <input type="text" id="phone" name="phone" required />
    <small class="error-message" id="phoneError"
      >Este campo debe contener solo números.</small
    >
    <small class="error-message" id="phoneLengthError"
      >El teléfono debe tener al menos 10 dígitos.</small
    >
  </div>

  <div class="form-group">
    <label for="message">Mensaje</label>
    <textarea id="message" name="message" required></textarea>
    <small class="error-message" id="messageError"
      >Este campo es obligatorio.</small
    >
  </div>

  <button type="submit">Enviar</button>
</form>
