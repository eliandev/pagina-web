---
import Category from "./Category.astro";
---

<section class="categories">
  <h2>Explora nuestras categorias</h2>
  <div class="grid">
    <Category />
  </div>
</section>

<style>
  .categories {
    width: 90%;
    max-width: 1440px;
    margin-left: auto;
    margin-right: auto;
    margin-top: 3rem;
    margin-bottom: 2rem;
  }

  .categories h2 {
    margin-bottom: 2rem;
    text-align: center;
    font-weight: 600;
  }

  .categories .grid {
    width: 100%;
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    column-gap: 2rem;
    row-gap: 2rem;
  }

  @media (max-width: 1200px) {
    .categories .grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media (max-width: 900px) {
    .categories .grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 600px) {
    .categories .grid {
      grid-template-columns: 1fr;
      column-gap: 1rem;
      row-gap: 1.5rem;
    }
  }
</style>
