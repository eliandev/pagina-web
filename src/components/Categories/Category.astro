---
import { categories } from "@data/catalog-config";
---

<>
  {
    categories.map((category) => (
      <a href={category.link} class="category">
        {category.name}
      </a>
    ))
  }
</>
<style>
  .category {
    font-size: 1.5rem;
    border: 1px solid #282121;
    color: #282121;
    text-decoration: none;
    text-align: center;
    padding-top: 1.5rem;
    padding-bottom: 1.5rem;
    padding-left: 1rem;
    padding-right: 1rem;
    display: block;
    transition:
      background-color 0.3s ease,
      transform 0.3s ease,
      color 0.3s ease; /* Smooth transitions */
  }

  .category:hover {
    background-color: #4800ff;
    color: #fff;
    transform: scale(1.05);
    border-color: #4800ff;
  }
</style>
